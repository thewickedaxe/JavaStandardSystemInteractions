<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="systemutils" basedir=".">
    <target name="build">
        <mkdir dir="${basedir}/build" />
        <jar destfile="${basedir}/build/JSSI.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="junit.awtui.TestRunner"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${basedir}/target/classes"/>
            <zipfileset excludes="META-INF/*.SF" src="${user.home}/.m2/repository/commons-io/commons-io/1.3.2/commons-io-1.3.2.jar"/>
        </jar>
    </target>
</project>
